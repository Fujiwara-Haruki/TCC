<style>

*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

body{
    display: grid;
    font-size: 20px;
    font-family: 'Cutive-Mono', monospace;
    background-color: var(--body-color);
    color: var(--main_color);
}

/*variáveis*/
:root{
    --altura_header: 65px;
    --altura_footer: 60px;
    --main_color: #2c3136;
    --main-hover-color: #afcedf;
    --body-color: #ffffff;
    --second-color: beige;
    --third_color: #2c3136ad;

}


  
/*cabeçalho*/
.header{
    background-color: var(--main_color);
    height: var(--altura_header) * 2;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

/*menu cabeçalho*/
.menu_1{
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    text-align: center;
    position: relative;
    justify-content: center;
    width: auto;
}

.menu_1-submenu{
    display: none;
    position: absolute;
    top: calc(100%);
    color: var(--second-color);
    text-decoration: none;
    list-style: none;
    text-align: start;
    background-color: var(--third_color);


}

.menu_1-submenu li{
    width: 100%;
    height: 100%;
}

.menu_1-submenu li a{  
    display: block;
    width: 100%;
    height: 100%;
    margin: -1.5rem 0rem;
}

/*elemento*/
.menu_1 li{
    padding: 1.5rem 0rem;
}

/*link*/
.menu_1 a{
    height: 100px;
    padding: 24px;
    text-decoration: none;
    color: var(--second-color);
}

.menu_1 a:hover, .menu_1 a:focus{
    background-color: var(--main-hover-color);
    color: var(--main_color);
}

.menu_1 li:hover ul, .menu_1 li:focus ul{
    display: block;

}

.menu_1-submenu:hover, .menu_1-submenu:focus{
    cursor: pointer;
}

  /*rodapé-------------------------------------*/
footer{
    height: var(--altura_footer);
    background-color: var(--main_color);
    text-align: center;
    color: beige
}



  /*estrutura*/
  
/*principal----------------------------------*/
.corpo{
    min-height: calc(100vh - var(--altura_header) - var(--altura_footer));
    
}

/*página*/
.meio{
    text-align: justify;
    margin-left: 18%;
    margin-right: 18%;
}

/*títulos*/
.titulo{
    text-align: center;
    font-size: 30px;
    border: 1px solid var(--main_color);
    /*background-color: var(--main-hover-color);*/
    font-weight:normal;
    margin: 30px;
}

/* DIV DAS IMAGENS */
.div_imagem{
    text-align: center;
    padding: 50px;
}

.div_imagem_grande{
    text-align: center;
}

.imagem_texto{
    font-size: 18px;
}

.imagem{
    max-width: 60vw;
    max-height: 40vw;
    height: auto;

}

/*video youtube*/
iframe{
    aspect-ratio: 16/9;
    width: 100%;
    max-width: 600px;
}

/*Botões*/
.botoes{
    display: flex;
    flex-direction: column;
    text-align: center;

}

/*elemento*/
.botoes li{
    display: flex;
    padding: 20px 0px;
    align-self: center;
}

/*link*/
.botoes a{
    height: 100%;
    padding: 20px;
    text-decoration: none;
    color: var(--main_color);
    background-color: var(--button-color);
    border-radius: 20px;
    border: 2px solid var(--main_color);
    align-items: center;
}

.botoes a:hover, .botoes a:focus{
    background-color: var(--button-hover-color);
    color: var(--main_color);
}

hr{
    border-color: var(--main_color);
}

p{
    padding: 20px;
}

@media (width < 485px){
    .meio{
        margin-left: 8%;
        margin-right: 8%;
    }
}

@media (width < 980){
    .imagem{
        padding: 0px;
    }
}


/*Botão top*/
.back-to-top {
    display: block;
    width: 60px;
    height: 60px;
    color: #fff;
    text-align: center;
    line-height: 40px;
    text-decoration: none;
    position: fixed;
    bottom: 20px;
    right: 20px;
    border-radius: 5px;
    z-index: 999;
}
.back-to-top img{
    width: 100%;
    height: 100%;
}

.back-to-top:hover{
    transform: scale(1.1);
}

/*Depoimentos*/

.btn{
  background-color: var(--main_color);
  color: var(--second-color);
  max-width: 50%;
}

  .comments-container {
    max-width: 70%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }
  .comment {
    background-color: var(--body-color);
    border: 1px solid var(--main_color);
    border-radius: 5px;
    margin: 10px 0;
    padding: 15px;
    box-shadow: 0 2px 5px var(--third_color);
  }
  .comment-nome {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  .comment-nome h3 {
    margin: 0;
    font-size: 1.2em;
    color: #555;
  }
  .comment-nome span {
    font-size: 0.9em;
    color: #999;
  }
  .comment-dep {
    font-size: 1em;
    line-height: 1.5;
    color: #444;
  }

</style>